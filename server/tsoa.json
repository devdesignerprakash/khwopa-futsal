{
  "entryFile": "./src/index.ts",
  "controllerPathGlobs": ["./src/controllers/*Controller.ts"],
  "spec": {
    "outputDirectory": "src/swagger",
    "specFile": "swagger.json",
    "specVersion": 3,
    "host": "localhost:8000",
    "schemes": ["http"],
    "components": {
      "securitySchemes": {
        "cookieAuth": {
           "type": "apiKey",
          "in": "cookie",
          "name": "token"
        }
      }
    }
   
  },
  "routes": {
    "routesDir": "build/routes"
  }
}
